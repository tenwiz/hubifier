{
  "name": "Hubifier",
  "version": "1.1",
  "description": "Github notifications",
  "permissions": [
    "notifications"
  ],
  "icons": {
    "128": "full_icon.png",
    "48": "full_icon48.png",
    "32": "full_icon32.png",
    "16": "full_icon16.png"
  },
  "browser_action": {
    "default_icon": {
      "128": "action_icon.png",
      "48": "action_icon48.png",
      "32": "action_icon32.png",
      "16": "action_icon16.png"
    },
    "default_title": "Hubifier",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "manifest_version": 2
}
